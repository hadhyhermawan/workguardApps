    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <queries>
        <package android:name="com.fakegps.mock" />
        <package android:name="com.lexa.fakegps" />
        <package android:name="org.freegps.mock" />
        <package android:name="com.gpsmock.pro" />
        <package android:name="com.fakegps.location" />
        <package android:name="com.fakegps.gpsjoy" />
        <package android:name="com.fgps.gps" />
        <package android:name="com.fakegpsstudio.mock" />
        <package android:name="com.fakegps.gpseasy" />
        <package android:name="com.gpsspoof.fakegps" />
