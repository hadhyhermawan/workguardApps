        <package android:name="com.topjohnwu.magisk" />
        <package android:name="com.topjohnwu.magisk.debug" />
        <package android:name="de.robv.android.xposed.installer" />
        <package android:name="org.meowcat.edxposed.manager" />
        <package android:name="com.solohsu.android.edxp.manager" />
        <package android:name="com.lsposed.manager" />
        <package android:name="com.saurik.substrate" />
    </queries>
    <application
        android:name=".WorkGuardApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:theme="@style/Theme.WorkGuard"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkGuard.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".notification.AppFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>
